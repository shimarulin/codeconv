{
  "name": "platr",
  "description": "Platr",
  "repository": "git@github.com:shimarulin/platr.git",
  "author": "Vyacheslav Shimarulin <shimarulin@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "expose": "mkdir -p ~/.node_modules && ln -s -f \"$(pwd)\"/node_modules/* ~/.node_modules && lerna exec -- yarn link",
    "lint": "lerna run lint --parallel",
    "lint:md": "prettier --ignore-path .gitignore --parser markdown --prose-wrap always \"**/*.md\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,vue}": [
        "eslint --fix",
        "git add"
      ],
      "**/*.md": [
        "prettier --parser markdown --prose-wrap always --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "husky": "1.3.1",
    "lerna": "3.10.8",
    "lint-staged": "8.1.1",
    "prettier": "1.16.3"
  },
  "workspaces": [
    "packages/@platr/*"
  ]
}
