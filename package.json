{
  "name": "codeconv",
  "description": "Code generation and linting toolbox",
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:shimarulin/codeconv.git",
  "author": "Vyacheslav Shimarulin <shimarulin@gmail.com>",
  "workspaces": [
    "packages/@codeconv/*",
    "docs"
  ],
  "scripts": {
    "format": "yarn format:json && yarn format:md && yarn format:pkg",
    "format:json": "prettier --write \"**/*.json\"",
    "format:md": "prettier --parser markdown --prose-wrap always --write \"**/*.md\"",
    "format:pkg": "format-package --write",
    "lint": "lerna run lint --",
    "lnk": "yarn && ln -s -f \"$(pwd)\"/node_modules/* \"$(npm prefix -g)\"/lib/node_modules && lerna exec -- yarn link",
    "mkpkg": "mkpkg",
    "publish": "lerna publish",
    "test": "lerna run test --parallel --",
    "unlnk": "lerna exec -- yarn unlink && rm -rf node_modules && find \"$(npm prefix -g)\"/lib/node_modules -xtype l -delete"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index -g",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --parser markdown --prose-wrap always --write",
      "eslint --cache --fix"
    ],
    "**/*.{js,ts}": [
      "eslint --cache --fix"
    ],
    "**/package.json": [
      "format-package --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.1.3",
    "format-package": "6.1.0",
    "husky": "4.3.6",
    "jest": "^26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
